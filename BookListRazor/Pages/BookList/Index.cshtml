@page
@model BookListRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<br />
<div class="container row">
    <div class="col-6">
        <h1 class="text-info">Book List</h1>
    </div>
    <div class="col-6 text-right">
        <a asp-page="Create" class="btn btn-primary">Create New Book</a>
    </div>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

@if (Model.Books.Count() > 0)
{
    <br />
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Author)</td>
                <td>@Html.DisplayFor(m => item.ISBN)</td>
                <td>
                    <a asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                    <a asp-route-id="@item.Id" asp-page="Edit" class="btn btn-success btn-sm"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No Books available.</p>
}